<html>
<head>
<style>
.container{
width:90%;
max-height:400px;
}
canvas{
 	margin-right: auto;
    margin-left: auto;
    display: block!important;
}

</style>

<!-- Latest compiled and minified CSS -->
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@3.3.7/dist/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">

<!-- Optional theme -->
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@3.3.7/dist/css/bootstrap-theme.min.css" integrity="sha384-rHyoN1iRsVXV4nD0JutlnGaslCJuC7uwjduW9SVrLvRYooPp2bWYgmgJQIXwl/Sp" crossorigin="anonymous">

<script src="https://cdnjs.cloudflare.com/ajax/libs/gauge.js/1.3.7/gauge.min.js"></script>
</head>

<body>

<script>

var opts = {
  angle: 0.15, // The span of the gauge arc
  lineWidth: 0.44, // The line thickness
  radiusScale: 1, // Relative radius
  pointer: {
    length: 0.6, // // Relative to gauge radius
    strokeWidth: 0.035, // The thickness
    color: '#000000' // Fill color
  },
  limitMax: false,     // If false, max value increases automatically if value > maxValue
  limitMin: false,     // If true, the min value of the gauge will be fixed
  colorStart: '#6FADCF',   // Colors
  colorStop: '#8FC0DA',    // just experiment with them
  strokeColor: '#E0E0E0',  // to see which ones work best for you
  generateGradient: true,
  highDpiSupport: true,     // High resolution support
};
</script>
<div class="container">
<h2>[%=categories.name%]</h2>

<div class="row">
[%for (kpi in kpis.asSet()) { %]
 <div class="col-md-6">
 	<div class="panel panel-default">
            <div class="panel-heading">
              <h3 class="panel-title">[%=kpi.name%]</h3>
            </div>
            <div class="panel-body">
              <div class="row">
 <div class="col-md-12">

<canvas id="chart-[%=kpi.name.trim()%]" ></canvas>
</div>
</div>
<div class="row">
	<div class="col-md-12" style=" text-align: center">
	 <label><b>[%=kpi.name%]</b></label>
	<span id="gauge-value[%=kpi.name.trim()%]">[%=kpi.value.valuetype.actualizedvalue%] [[%=kpi.unit%]]</span>
	</div>
</div>
</div>
            </div>
          </div>
          
 
<script>
var target = document.getElementById('chart-[%=kpi.name.trim()%]'); // your canvas element
var gauge = new Gauge(target).setOptions(opts); // create sexy gauge!
[%if(not kpi.value.valuetype.isKindOf(AggregatedRangedValue)){%]gauge.maxValue = [%=kpi.value.valuetype.max%]; // set max gauge value
gauge.setMinValue([%=kpi.value.valuetype.min%]);  // Prefer setter over gauge.minValue = 0; [%}%]
gauge.animationSpeed = 32; // set animation speed (32 is default value)
gauge.set([%=kpi.value.valuetype.actualizedvalue%]); // set actual value
//gauge.setTextField('[%=kpi.value.valuetype.actualizedvalue%] [[%=kpi.unit%]]');
</script>
[%}%]
</div>
</div>


</body>
</html>